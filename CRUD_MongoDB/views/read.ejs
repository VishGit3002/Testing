<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full h-screen bg-zinc-950 p-10 text-white">
        <div class="mb-5">
            <a href="/" class="text-blue-500">Back to home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-5">All Users</h1>
        <div class="users flex gap-5 flex-wrap ">
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-slate-500 overflow-hidden">
                        <img src="<%= user.image %>" class="w-full h-full object-cover" alt="">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-4 mt-10">
                        <a href="" class="text-zinc-400">Edit User</a>
                        <a href="" class="text-red-500">Delete User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>